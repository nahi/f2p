<%- form_tag({:action => 'list'}, {:method => 'GET', :name => 'search'}) do -%>
  <p>
    keyword: <%= text_field_tag('query', ctx.query, :placeholder => 'keyword') %><br />
    from group: <%= group_select_tag('room', ctx.room) %><br />
    from user: <%= text_field_tag('user', ctx.user_for || ctx.friends) %>
      with friends: <%= check_box_tag('friends', 'checked', ctx.friends ? 'checked' : nil) %><br />
    from service: <%= service_select_tag('service', ctx.service) %><br />
    with likes: <%= likes_select_tag('likes', ctx.likes) %><br />
    with comments: <%= likes_select_tag('comments', ctx.comments) %><br />
    <br />
    entries in page: <%= text_field_tag('num', ctx.num) %><br />
    <%= submit_tag 'search' %>
  </p>
<%- end -%>
<hr />
<p>
  <a name="bottom">Menu:</a>
  <%= common_menu %>
</p>
<%= render :partial => 'common' %>
