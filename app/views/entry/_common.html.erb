<%- if @ctx.ff? -%>
<p>Filters: <%= special_feed_links %></p>
<%- end -%>
<%- if @ctx.tweets? -%>
<p>Tweets: <%= twitter_links %></p>
<%- end -%>
<%- if @ctx.buzz? -%>
<p>Buzz: <%= buzz_links %></p>
<%- end -%>
<%- if @ctx.graph? -%>
<p>Facebook: <%= graph_links %></p>
<%- end -%>
<%- if @ctx.delicious? -%>
<p>Delicious: <%= delicious_links %></p>
<%- end -%>
<%- if str = list_links -%>
<p>Lists: <%= str %></p>
<%- end -%>
<%- if str = saved_search_links -%>
<p>Searches: <%= str %></p>
<%- end -%>
<%- unless @ctx.pin? -%>
  <%- form_tag(search_action) do -%>
    <p><%= search_form %></p>
  <%- end -%>
<%- end -%>
<%- if @api_limit and @api_limit > 0 -%>
  (API limit: <%= @api_remaining %>/<%= @api_limit %> in <%= @api_to_reset / 60 + 1 %> min)
<%- end -%>
