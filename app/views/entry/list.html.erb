<%- if flash[:login] -%>
  <p class="message">
    You can change TimeZone, font size and other settings from <%= settings_link %> menu.
  </p>
<%- end -%>
<%- if flash[:deleted_id] -%>
  <p class="message"><%= undo_delete_link(flash[:deleted_id], flash[:deleted_comment]) %></p>
<%- elsif flash[:added_comment] -%>
  <p class="message"><%= undo_add_comment_link(flash[:added_id], flash[:added_comment]) %></p>
<%- elsif flash[:added_id] -%>
  <p class="message"><%= undo_add_link(flash[:added_id]) %></p>
<%- elsif flash[:retweeted_id] -%>
  <p class="message">Retweeted.</p>
<%- end -%>
<%- if flash[:message] -%>
  <p class="message"><%=h flash[:message] %></p>
<%- end -%>
<%- if ctx.list? -%>
  <%= render :partial => 'entries', :locals => {:threads => @threads} %>
<%- else -%>
  <%= render :partial => 'single', :locals => {:threads => @threads} %>
<%- end -%>
